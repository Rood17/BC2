<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Publicity">
    <!-- Main Layout -->
    <!-- Main Layout -->
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        android:screenOrientation="landscape"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <!-- Language Buttons Layout -->
        <RelativeLayout
            android:id="@+id/form_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="2"
            android:layout_marginVertical="@dimen/margin_ver_activity"
            android:layout_marginHorizontal="@dimen/margin_hor_activity"

            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/form_heading_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_regular"
                android:text="@string/publi_title"
                android:background="@color/grey"
                android:textAppearance=
                    "@android:style/TextAppearance.DeviceDefault.Small.Inverse"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


            <ScrollView
                android:id="@+id/form_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/form_heading_form" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:padding="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="395px"
                            android:background="@drawable/logo_black"
                            />

                        <TextView
                            android:id="@+id/publi_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_regular"
                            android:text="@string/txt_publi"
                            android:textAppearance=
                                "@android:style/TextAppearance.DeviceDefault.Small.Inverse"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_conocer_redes"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/publi_conocer">

                            <AutoCompleteTextView
                                android:id="@+id/act_conocer_redes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:inputType="none"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/publi_otro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/otro"
                            android:layout_marginVertical="16dp"
                            app:endIconMode="custom"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/publi_otro_txt"
                                />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_marginVertical="15px"
                            android:background="@android:color/black" />

                        <LinearLayout
                            android:id="@+id/check_redes"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/padding_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/publi_text_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="@dimen/padding_regular"
                                android:layout_marginVertical="@dimen/activity_vertical_margin"
                                android:text="@string/txt_publi_2"
                                android:textAppearance=
                                    "@android:style/TextAppearance.DeviceDefault.Small.Inverse"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="15dp"
                                    android:orientation="vertical">
                                    <CheckBox
                                        android:id="@+id/checkFb"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="10px"
                                        android:textSize="12sp"
                                        android:buttonTint="@color/teal_700"
                                        android:onClick="onCheckboxPublicityClicked"
                                        android:text="Facebook" />
                                    <CheckBox
                                        android:id="@+id/checkInsta"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_marginVertical="10px"
                                        android:buttonTint="@color/teal_700"
                                        android:onClick="onCheckboxPublicityClicked"
                                        android:text="Instagram" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <CheckBox
                                        android:id="@+id/checkRef"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="10px"
                                        android:textSize="12sp"
                                        android:buttonTint="@color/teal_700"
                                        android:onClick="onCheckboxPublicityClicked"
                                        android:text="@string/publi_refer" />
                                    <CheckBox
                                        android:id="@+id/checkAnuncioCalle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_marginVertical="10px"
                                        android:buttonTint="@color/teal_700"
                                        android:onClick="onCheckboxPublicityClicked"
                                        android:text="@string/publi_calle" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/p_publi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                        </LinearLayout>



                    </LinearLayout>




                    <!-- BotÃ³n -->
                    <LinearLayout
                        android:id="@+id/action_btn_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="end">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_regular"
                            android:layout_margin="@dimen/action_btn_margin"
                            android:gravity="center">

                            <Button
                                android:id="@+id/ActionButtonContinue"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:textStyle="bold"
                                android:layout_marginVertical="5dp"
                                android:background="@drawable/circle"
                                android:text="@string/action_btn_text"
                                android:textSize="@dimen/act_btn_txt_size"
                                app:backgroundTint="@color/black"
                                android:elevation="10dp"

                                />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/welcomeActionButton"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/ir_registro" />


                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>


            </ScrollView>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>